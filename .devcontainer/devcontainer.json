{
    "name": "Battle for Wesnoth remote desktop environment",
    "image": "ghcr.io/gbraad-gaming/wesnoth:latest",
    "runArgs": [ "--cap-add=NET_ADMIN", "--cap-add=NET_RAW", "--device=/dev/net/tun", "--device=/dev/fuse" ],

    "overrideCommand": false,
    "privileged": true,
    "remoteUser": "gbraad",

    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.Theme-TomorrowKit"
            ]
        }
    }
}